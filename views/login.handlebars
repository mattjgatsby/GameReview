<h2 class="d-flex justify-content-center m-5">Login</h2>
<div class="d-flex justify-content-center">
  <form class="form login-form border col-5 text-center p-5">
    <div class="form-group">
      <label for="user_name">User Name:</label>
      <input class="form-input" type="text" id="user_name" />
    </div>
    <div class="form-group">
      <label for="password-login">Password:</label>
      <input class="form-input" type="password" id="password-login" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Login</button>
    </div>
  </form>
</div>

<script src="/js/login.js"></script>